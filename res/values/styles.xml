<resources>
	
	<style name="sharing:scrollViewStyle" >
		<item name="android:background">@drawable/window_border</item>		
	</style>
	
	<style name="sharing:textViewStyle" parent="@android:style/Widget.TextView" >		
		<item name="android:textColor">@color/font_color_for_light_back</item>	
		
	</style>
	
	<style name="sharing:view"  >
		<item name="android:background">@color/widget_background</item>
	</style>
	
	<style name="sharing:spinnerStyle" parent="@android:style/Widget.Spinner" >
		<item name="android:background">@color/window_background_alt</item>
	</style>
	
	<style name="sharing:spinnerItemStyle"  >
		
	</style>
	
	<style name="sharing:spinnerDropDownItemStyle">
		<item name="android:color">@color/window_background</item>
