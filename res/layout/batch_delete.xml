<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="25dip"
  android:gravity="center_horizontal"
  >
  
    <TimePicker android:id="@+id/tpBatchTime" 
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		
 	/>
	
    <Spinner 
	     android:id="@+id/spBatchDeleteWeekday"
	     android:layout_width="fill_parent"
	     android:layout_height="40dip"
	     android:prompt="@string/weekday_prompt"     
 	/>
 	
 	<Button android:id="@+id/btnBatchDelete" 
		android:layout_width="wrap_content"
	    android:layout_height="40dip" 
	    android:text="@string/btnBatchDelete_text" 
	    android:onClick="btnBatchDelete_Click" 
	/>
  
</LinearLayout>